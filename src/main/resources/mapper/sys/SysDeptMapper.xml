<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cy.pj.sys.dao.SysDeptDao">
    <resultMap id="dept_map" type="com.cy.pj.sys.entity.SysDept">
        <result column="name" property="name"/>
        <result column="parentId" property="parentId"/>
    </resultMap>
    <select id="findObjects" resultType="com.cy.pj.sys.entity.SysDept">
        SELECT c.*, p.name parentName
        FROM sys_depts c
                 LEFT JOIN sys_depts p on c.parentId = p.id

    </select>
    <select id="findNodeObjects" resultType="java.util.Map">
        SELECT id, name, parentId
        FROM sys_depts
    </select>

    <select id="getChildCountById" resultType="java.lang.Integer">
        SELECT count(*)
        FROM sys_depts
        WHERE parentId = #{id}
    </select>

    <cache size="512"/>

    <insert id="insertObject">
        INSERT INTO sys_depts(id, name, parentId, sort, note, createdTime, modifiedTime, createdUser, modifiedUser)
        VALUES (null,#{name},#{parentId},#{sort},#{note},now(),now(),#{createdUser},#{modifiedUser})
    </insert>

    <delete id="deleteObjects">
        delete from sys_depts
        <where>
            <choose>
                <when test="ids!=null and ids.length>0">
                    <foreach collection="ids" item="id" separator=" or ">
                        id = #{id}
                    </foreach>
                </when>
                <otherwise>1=2</otherwise>
            </choose>
        </where>
    </delete>

    <update id="updateObject">
        update sys_depts
        <set>
            <if test="name != null and name !=''">name= #{name},</if>
            parentId = #{parentId},
            <if test="sort!=null">sort = #{sort},</if>
            <if test="note != null and note != ''">note = #{note}</if>
        </set>
        where id = #{id}
    </update>
</mapper>