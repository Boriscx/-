<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cy.pj.sys.dao.SysRoleDao">

    <resultMap id="sysRoleMenuVo" type="com.cy.pj.sys.entity.SysRole">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="note" property="note"/>
        <!--        一对多关联查询或嵌套查询 -->
        <collection property="menuIds" ofType="int">
            <result column="menu_id"/>
        </collection>
    </resultMap>

    <sql id="queryWhereId">
        <where>
            <if test="name!=null and name != ''">
                name like concat("%", #{name}, "%")
            </if>
        </where>
    </sql>

    <insert id="insertObject" useGeneratedKeys="true" keyProperty="id" flushCache="true">
        insert into sys_roles(name, note, createdTime, modifiedTime, createdUser, modifiedUser)
        values (#{name}, #{note}, now(), now(), #{createdUser}, #{modifiedUser})
    </insert>

    <update id="updateObject" flushCache="true">
        update sys_roles
        <set>
            <if test="name!=null and name != ''">name=#{name},</if>
            <if test="note!=null">note=#{note},</if>
            <if test="modifiedUser!=null">modifiedUser=#{modifiedUser},modifiedTime = now()</if>
        </set>
        where id = #{id}
    </update>
    <!--    <delete id="deleteObject">-->
    <!--        DELETE-->
    <!--        FROM sys_roles-->
    <!--        WHERE id = #{id}-->
    <!--    </delete>-->

    <!--    <select id="getRowCount" resultType="java.lang.Integer">-->
    <!--        SELECT COUNT(*)-->
    <!--        FROM sys_roles-->
    <!--        <include refid="queryWhereId"/>-->
    <!--    </select>-->
    <select id="findPageObjects" resultType="com.cy.pj.sys.entity.SysRole">
        SELECT id, name, note, createdTime, modifiedTime, createdUser, modifiedUser
        FROM sys_roles
        <where>
            <if test="key!=null and key != ''">
                name like concat("%", #{key}, "%")
            </if>
        </where>
        LIMIT #{currentIndex},#{pageSize}
    </select>
    <select id="getMapById" resultMap="sysRoleMenuVo">
        select r.id, r.name, r.note, srm.menu_id
        from sys_roles r
                 left join sys_role_menus srm on r.id = srm.role_id
        where r.id = #{id}
    </select>
    <select id="findAllObjects" resultType="map">
        SELECT id, name
        from sys_roles
    </select>
</mapper>